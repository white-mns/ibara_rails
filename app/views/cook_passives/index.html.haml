- @page_title = "料理時パッシブ発動一覧"
%h1= @page_title

.card.desc
  .card-header
    - act_icon(true)
    検索仕様
    - act_desc(true)
  .card-body
    = render "layouts/base_desc"
    %p
      %span.example_select.example_toggle.pointer
        - help_icon
        入力例
        - act_desc(false)
    #example.closed
      = render "layouts/input_desc"
= search_form_for @search do |f|
  %table.search_toggle.table.table-striped.table-bordered.table-hover
    %tbody.pointer
      %tr
        %td{colspan: "5"}
          - act_icon(true)
          絞り込み検索
          - act_desc(true)
    %tbody
      %tr
      %tr
        %td.indent
        - td_form(f, @form_params, @placeholder, class_name: "formNum",  label: "更新回", params_name: "result_no_form", placeholder: nil, colspan: 3)
      %tr
        %td.indent
        - td_form(f, @form_params, @placeholder, class_name: "formNum",  label: "料理Eno", params_name: "e_no_form", placeholder: "Number")
        - td_form(f, @form_params, @placeholder, class_name: "formText", label: "料理キャラクター名", params_name: "cook_pc_name_form", placeholder: "Name")
      %tr
        %td.indent
        - td_form(f, @form_params, @placeholder, class_name: "formNum",  label: "依頼Eno", params_name: "requester_e_no_form", placeholder: "Number")
        - td_form(f, @form_params, @placeholder, class_name: "formText", label: "依頼キャラクター名", params_name: "pc_name_form", placeholder: "Name")
      %tr.sep
        %td.indent
        - td_form(f, @form_params, @placeholder, class_name: "formText",  label: "発動スキル", params_name: "skill_form", placeholder: "CookPassive", colspan: 3)
      %tr.sep
        %td.indent
        - td_form(f, @form_params, @placeholder, class_name: "formNum",  label: "ダイス目合計", params_name: "dice_total_form", placeholder: "Number", colspan: 3)
      %tr.sep
        %td.indent
        - td_form(f, @form_params, @placeholder,                         label: "ダイス結果", params_name: "world_form", colspan: 3, 
                    checkboxes: [{label: "大成功", params_name: "dice_big_success", class_name: "after_space mobile_br"},
                                 {label: "成功",   params_name: "dice_success", class_name: "after_space"},
                                 {label: "通常",   params_name: "dice_normal", class_name: "after_space mobile_br"},
                                 {label: "失敗",   params_name: "dice_failed", class_name: "after_space"},
                                 {label: "大失敗", params_name: "dice_big_failed"}])

    - #==========================================================================================================================
    - tbody_toggle(@form_params, params_name: "show_world",
                    label: {open: "所属世界で絞り込む", close: "所属世界で絞り込みを隠す"}, base_first: false)
    %tbody.closed
      %tr
        %td.indent
        - td_form(f, @form_params, @placeholder,                         label: "所属世界", params_name: "world_form", colspan: 3, 
                    checkboxes: [{label: "イバラシティ", params_name: "is_ibaracity", class_name: "after_space mobile_br"},
                                 {label: "アンジニティ", params_name: "is_ansinity"}])

    - #==========================================================================================================================
    - tbody_toggle(@form_params, params_name: "show_dice",
                    label: {open: "ダイス目を表示する", close: "ダイス目を表示しない"},
                    act_desc: "ダイス目1、ダイス目2、ダイス目3", base_first: false)
    %tbody.closed
      %tr.sep
        %td.indent
        - td_form(f, @form_params, @placeholder, class_name: "formNum",  label: "ダイス目1", params_name: "dice_1_form", placeholder: "Number")
        - td_form(f, @form_params, @placeholder, class_name: "formNum",  label: "ダイス目2", params_name: "dice_2_form", placeholder: "Number")
      %tr
        %td.indent
        - td_form(f, @form_params, @placeholder, class_name: "formNum",  label: "ダイス目3", params_name: "dice_3_form", placeholder: "Number", colspan: 3)

    - #==========================================================================================================================
    - tbody_toggle(@form_params, params_name: "show_source_name",
                    label: {open: "食材名を表示する", close: "食材名を表示しない"}, base_first: false)
    %tbody.closed
      %tr.sep
        %td.indent
        - td_form(f, @form_params, @placeholder, class_name: "formText",  label: "食材名", params_name: "source_name_form", placeholder: "Item", colspan: 3)


    - #==========================================================================================================================
    - tbody_toggle(@form_params, params_name: "show_item_name",
                    label: {open: "料理名を表示する", close: "料理名を表示しない"}, base_first: false)
    %tbody.closed
      %tr.sep
        %td.indent
        - td_form(f, @form_params, @placeholder, class_name: "formText",  label: "料理名", params_name: "name_form", colspan: 3)

    - #==========================================================================================================================
    - tbody_toggle(@form_params, params_name: "show_item",
                    label: {open: "料理アイテム情報を表示する", close: "料理アイテム情報を表示しない"},
                    act_desc: "強さ、効果名、効果1～3個別の効果名、効果値", base_first: false)
    %tbody.closed
      %tr.sep
        %td.indent
        - td_form(f, @form_params, @placeholder, class_name: "formText",  label: "アイテム名", params_name: "name_form", placeholder: "Item", colspan: 3)
      %tr.sep
        %td.indent
        - td_form(f, @form_params, @placeholder, class_name: "formNum",  label: "強さ", params_name: "strength_form", colspan: 3)
      %tr.sep
        %td.indent
        - td_form(f, @form_params, @placeholder, class_name: "formText",  label: "効果名", params_name: "effect_form", placeholder: "Fuka", colspan: 3)
      %tr.sep
        %td.indent
        - td_form(f, @form_params, @placeholder, class_name: "formText",  label: "効果1", params_name: "effect_1_form")
        - td_form(f, @form_params, @placeholder, class_name: "formNum",  label: "効果値", params_name: "effect_1_value_form", placeholder: "Number")
      %tr.sep
        %td.indent
        - td_form(f, @form_params, @placeholder, class_name: "formText",  label: "効果2", params_name: "effect_2_form")
        - td_form(f, @form_params, @placeholder, class_name: "formNum",  label: "効果値", params_name: "effect_2_value_form")
      %tr.sep
        %td.indent
        - td_form(f, @form_params, @placeholder, class_name: "formText",  label: "効果3", params_name: "effect_3_form")
        - td_form(f, @form_params, @placeholder, class_name: "formNum",  label: "効果値", params_name: "effect_3_value_form")

    - #==========================================================================================================================
    %tbody
      %tr.sep
        %td.indent
        %td.indent= hidden_field_tag :is_form, 1
        %td{colspan: "3"}
          - search_submit_button


= paginate(@cook_passives)
%br
ヒット数：#{ @count }件
%br
%br

%table.table.table-striped.table-bordered.table-hover
  %thead
    %tr
      %th= sort_link(@search, :result_no,"更新回", default_order: :desc)
      %th= sort_link(@search, :cook_e_no,"料理者(Eno)", default_order: :desc)
      %th.sep= sort_link(@search, :skill_id, "スキル", default_order: :desc)
      %th.sep= sort_link(@search, :result, "結果", default_order: :desc)
      %th.sep= sort_link(@search, :dice_total, "ダイス合計", default_order: :desc)
      - if @form_params["show_dice"] == "1"
        %th.sep= sort_link(@search, :dice_1, "ダイス1", default_order: :desc)
        %th= sort_link(@search, :dice_2, "ダイス2", default_order: :desc)
        %th= sort_link(@search, :dice_3, "ダイス3", default_order: :desc)
      - if @form_params["show_source_name"] == "1"
        %th.sep= sort_link(@search, :cook_source_name, "食材", default_order: :desc)
      - if @form_params["show_item_name"] == "1"
        %th.sep= sort_link(@search, :cook_name, "料理名", default_order: :desc)
      - if @form_params["show_item"] == "1"
        %th.sep= sort_link(@search, :cook_item_strength, "強さ", default_order: :desc)
        %th.sep= sort_link(@search, :cook_item_effect_1_id, "効果1", default_order: :desc)
        %th= sort_link(@search, :cook_item_effect_1_value, "効果値", default_order: :desc)
        %th.sep= sort_link(@search, :cook_item_effect_2_id, "効果2", default_order: :desc)
        %th= sort_link(@search, :cook_item_effect_2_value, "効果値", default_order: :desc)
        %th.sep= sort_link(@search, :cook_item_effect_3_id, "効果3", default_order: :desc)
        %th= sort_link(@search, :cook_item_effect_3_value, "効果値", default_order: :desc)
      %th.sep{colspan: "4"} 結果リンク
  %tbody
    - @cook_passives.each do |cook_passive|
      %tr
        %td= cook_passive.result_no
        %td{style: "#{ world_border(cook_passive.cook.world) }" }= pc_name_text(cook_passive.cook.e_no, cook_passive.cook.pc_name) if  cook_passive.cook
        %td.sep= cook_passive.skill.name if cook_passive.skill
        %td.sep= passive_result_text(cook_passive)
        %td.sep= cook_passive.dice_total if cook_passive.dice_total > 0
        - if @form_params["show_dice"] == "1"
          %td.sep= cook_passive.dice_1 if cook_passive.dice_1 > 0
          %td= cook_passive.dice_2 if cook_passive.dice_2 > 0
          %td= cook_passive.dice_3 if cook_passive.dice_3 > 0
        - if @form_params["show_source_name"] == "1"
          %td.sep= cook_passive.cook.source_name if cook_passive.cook
        - if @form_params["show_item_name"] == "1"
          %td.sep= cook_passive.cook.name if cook_passive.cook
        - if @form_params["show_item"] == "1"
          %td.sep= cook_passive.cook.item.strength if cook_passive.cook && cook_passive.cook.item
          %td.sep{colspan: 2}
            = cook_passive.cook.item.effect_1.name if cook_passive.cook && cook_passive.cook.item && cook_passive.cook.item.effect_1
            = cook_passive.cook.item.effect_1_value if cook_passive.cook && cook_passive.cook.item && cook_passive.cook.item.effect_1_value > 0
          %td.sep{colspan: 2}
            = cook_passive.cook.item.effect_2.name if cook_passive.cook && cook_passive.cook.item && cook_passive.cook.item.effect_2
            = cook_passive.cook.item.effect_2_value if cook_passive.cook && cook_passive.cook.item && cook_passive.cook.item.effect_2_value > 0
          %td.sep{colspan: 2}
            = cook_passive.cook.item.effect_3.name if cook_passive.cook && cook_passive.cook.item && cook_passive.cook.item.effect_3
            = cook_passive.cook.item.effect_3_value if cook_passive.cook && cook_passive.cook.item && cook_passive.cook.item.effect_3_value > 0
        %td.sep= character_link_text(cook_passive.cook.e_no, "料理者") if  cook_passive.cook
        %td= character_old_link(@latest_result, cook_passive.cook.e_no, cook_passive.result_no, cook_passive.generate_no) if  cook_passive.cook
        %td.sep= character_link_text(cook_passive.requester_e_no, "依頼者")
        %td= character_old_link(@latest_result, cook_passive.requester_e_no, cook_passive.result_no, cook_passive.generate_no)
= paginate(@cook_passives)
